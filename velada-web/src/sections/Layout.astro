---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
/* Importación de estilos globales en el layout [10] */
import '../styles/global.css'; 
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- El título se debe poner lo más arriba posible, según las recomendaciones de SEO [5] -->
		<title>
			La Velada del Año 5 Evento de Boxeo de IBlanos con creadores de
			creadores de contenido
		</title>
		<meta
			name="description"
			content="Evento de boxeo aficionado entre streamers y creadores de contenido organizado por Ebai Janos"
		/>
		<title>Astro Basics</title>

		<!-- Twitter Card [6] -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@infolavelada" />
		<meta name="twitter:creator" content="@ibaiYanos" />
		<meta name="twitter:title" content="La Velada del Año 5 de Ibayanos" />
		<meta name="twitter:description" content="..." />

		<!-- OpenGraph (usando 'property') [7, 8] -->
		<meta property="og:title" content="La Velada del Año 5" />
		<meta property="og:description" content="..." />
		<meta property="og:image" content="OG_image_url.jpeg" />
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="es_ES" />
		<title>Astro basics</title>
	</head>
	<body>
		<Header />

		<slot />
		<!-- En 'slot' se renderiza el contenido de la ruta actual (Home, Pronósticos, etc.) [3] -->

		<Footer />
	</body>
</html>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>